{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"jsx": "preserve",
		"moduleResolution": "Node",

		"esModuleInterop": true,
		"strict": true,
		"sourceMap": true,
		"experimentalDecorators": true,

		"newLine": "LF",
		"removeComments": true,
		"baseUrl": ".",
		"types": [
			"webpack-env",
			"jest"
		],
//		被第三方引入时可能造成编译问题
//		"paths": {
//			"@/*": ["src/*"]
//		},
		"lib": [
			"ESNext",
			"DOM",
			"DOM.Iterable",
			"ScriptHost"
		]
	},
	"include": [
		"src/**/*.ts",
		"src/**/*.tsx",
		"__tests__/**/*.ts",
		"__tests__/**/*.tsx"
	]
}
