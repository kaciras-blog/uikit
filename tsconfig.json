{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "NodeNext",
		"lib": [
			"ESNext",
			"DOM",
			"DOM.Iterable"
		],
		"baseUrl": ".",

		// 目前没法打包类型定义文件，不要再源码中用别名。
		// "paths": {
		// 	"@/*": ["src/*"]
		// },

		"jsx": "preserve",
		"useUnknownInCatchVariables": false,
		"skipLibCheck": true,
		"resolveJsonModule": true,
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"sourceMap": true
	}
}
