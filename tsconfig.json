{
	"include": [
		"__tests__/**/*.ts",
		"src/**/*.ts"
	],
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "Node",
		"lib": [
			"ESNext",
			"DOM",
			"DOM.Iterable"
		],
		"baseUrl": ".",
		"paths": {
			"@/*": ["src/*"]
		},
		"jsx": "preserve",
		"skipLibCheck": true,
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"sourceMap": true,
	}
}
