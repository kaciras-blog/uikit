{
	"include": [
		"__tests__/**/*.ts",
		"src/**/*.ts"
	],
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "Node",
		"lib": [
			"ESNext",
			"DOM",
			"DOM.Iterable"
		],
		"baseUrl": ".",

		// 目前没法打包类型定义文件，不要再源码中用别名。
		// "paths": {
		// 	"@/*": ["src/*"]
		// },

		"jsx": "preserve",
		"skipLibCheck": true,
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"sourceMap": true,
	}
}
